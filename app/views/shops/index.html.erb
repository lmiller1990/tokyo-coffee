<h4>All Cafes</h4>

<div class="ui equal width stackable grid container" id="shop-index-container">
	<div class="four wide column">
		Stuff
	</div>
	<div class="nine wide column">
		<div class="ui items">
			<% @shops.each do |shop| %>
				<div class="item">
					<div class="image">
						<%= image_tag shop.photos.first.link %>
					</div>
					<div class="content">
						<%= link_to shop.japanese_name, shop, class: "header" %>
						<div class="meta">
							<span>Desc...</span>
						</div>
						<div class="description">
							<p>Some interesting info goes here.</p>
						</div>
						<div class="extra">
							<i class="wifi icon"></i>
							<i class="pause circle outline icon"></i>
							<i class="volume down icon"></i>
							<i class="food icon"></i>
							<i class="coffee icon"></i>
						</div>
						<div class="right extra">
							<i class="instagram icon"></i>
							<i class="facebook icon"></i>
							<i class="snapchat icon"></i>
						</div>
					</div>
					<%# if current_user.present? && current_user.admin? %>
					<%#= link_to 'delete', shop, method: :delete, data: { confirm: 'Are you sure?' } %>
					<%# end %>
				</div>
			<% end %>
		</div>
	</div>
</div>

<style>
.right.extra {
	display: flex !important;
	justify-content: flex-end; 
}

@media (min-width: 768px) {
	#shop-index-container {
		text-align: left;
	}
}
</style>
