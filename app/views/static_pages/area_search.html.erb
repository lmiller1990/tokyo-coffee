<div class="ui container" style="text-align: left">
	<h4 class="ui header">
		エリアで検索
	</h4>

	<% @districts.each do |d| %>
		<%= button_to d.japanese_name, shops_path, { method: :get, class: 'ui basic grey button district-button', params: { area: d.id } } %>
	<% end %>
</div>

<style>
.button_to {
	display: inline-block;
}
.district-button {
	margin-bottom: 5px !important;
}
</style>
