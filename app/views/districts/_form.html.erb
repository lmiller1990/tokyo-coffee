<%= form_for(@district, html: { class: 'ui form' }) do |f| %>
	<%= render partial: 'shared/error_messages', locals: { object: @district } %>

	<div class="field">
		<%= f.label :japanese_name, 'エリア' %>
		<%= f.text_field :japanese_name  %>
	</div>

	<div class="field">
		<%= select('district', 'ward_id', @wards_collection) %>
	</div>
	<%= f.submit yield(:district_button_text), class: 'ui basic green fluid button' %>
<% end %>
